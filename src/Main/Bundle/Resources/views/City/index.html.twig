{% extends "MainBundle:PageLayout:base_admin.html.twig" %}
{% block javascripts %}
{% endblock %}
{% block body %}
    <h3>Список городов</h3>
    <table class="table table-hover"">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Url</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('city_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.url }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('city_show', { 'id': entity.id }) }}">Просмотреть</a>
                        </li>
                        <li>
                            <a href="{{ path('city_edit', { 'id': entity.id }) }}">Редактировать</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('city_new') }}">Добавить новый</a>
        </li>
    </ul>
{% endblock %}