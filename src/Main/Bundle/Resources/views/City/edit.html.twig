{% extends "MainBundle:PageLayout:base_admin.html.twig" %}
{% block javascripts %}
{% endblock %}
{% block body %}
    <h3>Редактирование города - {{ entity.getName }}</h3>

    <form action="{{ path('city_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Сохранить</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('city') }}">К списку</a>
        </li>
        <li>
            <form action="{{ path('city_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Удалить</button>
            </form>
        </li>
    </ul>
{% endblock %}
