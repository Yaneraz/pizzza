{% extends "MainBundle:PageLayout:base_admin.html.twig" %}
{%- set chain = current_chain() -%}
{% block body %}
    <h3>Редактирование ингридиента</h3>

    <form action="{{ path('admin_ingredient_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        {% if entity.getImageName %}
            <img src="{{ vich_uploader_asset(entity, 'image') }}" width="100" alt="{{ entity.getImageName }}" class="thumb" />
        {% endif %}
        <br/>
        <br/>
        <p>
            <button type="submit" class="btn btn-success">Сохранить</button>
        </p>
    </form>
    <a class="btn btn-info" href="{{ path('admin_ingredient') }}">К списку</a>
{% endblock %}
