{% endblock %}
{%- set chain = current_chain()-%}
{% block body %}
    <h3>TypePublication edit</h3>

    <form action="{{ path('admin_type_publication_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button class="btn btn-success" type="submit">Сохранить</button>
        </p>
    </form>

    <div>
        <a class="btn btn-info" href="{{ path('admin_type_publication') }}">К списку</a>
        <br/>
        <br/>
        <form action="{{ path('admin_type_publication_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button class="btn btn-danger" type="submit">Удалить</button>
        </form>
    </div>
{% endblock %}