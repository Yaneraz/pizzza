{% extends "MainBundle:PageLayout:base_admin.html.twig" %}
{%- set chain = current_chain() -%}
{% block body %}
    <h3>Редактирование акции</h3>

    <form action="{{ path_city('admin_discount_edit', { 'id': entity.id, 'chain_id':chain.id, '_city':_city }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        {% if entity.getImageName %}
            <img src="{{ vich_uploader_asset(entity, 'image') }}" width="100" alt="{{ entity.getImageName }}" class="thumb" />
        {% endif %}
        <br/>
        <br/>
        <p>
            <button type="submit" class="btn btn-success">Сохранить</button>
        </p>
    </form>
    <div>
        <a href="{{ path_city('admin_discount', {'chain_id':chain.id, '_city':_city}) }}" class="btn btn-info" style="float: left; margin-right: 10px;">К списку</a>
        <form action="{{ path('admin_discount_delete', { 'id': entity.id, '_city':_city }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger">Удалить</button>
        </form>
    </div>
{% endblock %}
