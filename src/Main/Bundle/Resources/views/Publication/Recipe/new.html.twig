{% extends "MainBundle:PageLayout:base_admin.html.twig" %}
{%- set chain = current_chain() -%}
{% block body %}
    <h3>Добавляем новость</h3>
    
    <form action="{{ path_city('admin_recipe_new', {id:id}) }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        {% if entity.getImageName %}
            <img src="{{ vich_uploader_asset(entity, 'image') }}" width="100" alt="{{ entity.getImageName }}" class="thumb" />
        {% endif %}
        <br/>
        <br/>
        <p>
            <button type="submit" class="btn btn-success">Сохранить</button>
        </p>
    </form>
    
    <div>
        <a class="btn btn-info" href="{{ path_city('admin_recipe') }}">К списку</a>
    </div>
{% endblock %}