{% extends "MainBundle:PageLayout:base_admin.html.twig" %}
{%- set chain = current_chain() -%}
{% block body %}
    <h3>Редактирование страницы</h3>
    <form action="{{ path('admin_page_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <button class="btn btn-success" type="submit">Сохранить</button>
    </form>
    <a class="btn btn-info" href="{{ path('admin_page') }}">К списку</a>
{% endblock %}
